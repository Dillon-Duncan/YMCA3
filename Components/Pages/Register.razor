@page "/register"

<div class="d-flex justify-content-center" style="margin-bottom: 25px;">
    <h2>Register</h2>
</div>

<form>
    <div class="d-flex justify-content-center" style="margin-bottom: 5px;">
        <label class="form-label" for="userFullname">Full name</label>
    </div>

    <div class="d-flex justify-content-center" style="margin-bottom: 20px;">
        <input type="text" id="userFullname" class="form-control form-control-lg shadow" />
    </div>

    <div class="d-flex justify-content-center" style="margin-bottom: 5px;">
        <label class="form-label" for="userEmail">Email</label>
    </div>

    <div class="d-flex justify-content-center" style="margin-bottom: 20px;">
        <input type="text" id="userEmail" class="form-control form-control-lg shadow" />
    </div>

    <div class="d-flex justify-content-center" style="margin-bottom: 5px;">
        <label class="form-label" for="userPhoneNumber">Phone Number</label>
    </div>

    <div class="d-flex justify-content-center" style="margin-bottom: 20px;">
        <input type="text" id="userPhoneNumber" class="form-control form-control-lg shadow" />
    </div>

    <div class="d-flex justify-content-center" style="margin-bottom: 5px;">
        <label class="form-label" for="userCity">City</label>
    </div>

    <div class="d-flex justify-content-center" style="margin-bottom: 20px;">
        <input type="text" id="userCity" class="form-control form-control-lg shadow" />
    </div>

    <div class="d-flex justify-content-center" style="margin-bottom: 5px;">
        <label class="form-label" for="userPassword">Password</label>
    </div>

    <div class="d-flex justify-content-center" style="margin-bottom: 20px;">
        <input type="password" id="userConfirmPassword" class="form-control form-control-lg shadow" />
    </div>

    <div class="d-flex justify-content-center" style="margin-bottom: 5px;">
        <label class="form-label" for="userConfirmPassword">Confirm Password</label>
    </div>

    <div class="d-flex justify-content-center" style="margin-bottom: 20px;">
        <input type="password" id="userPassword" class="form-control form-control-lg shadow" />
    </div>

    <div class="d-flex justify-content-center" style="margin-bottom: 20px;">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="rememberMe" checked />
            <label class="form-check-label" for="rememberMe"> Remember me </label>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block btn-lg mb-4 shadow">Register</button>
    </div>
</form>

